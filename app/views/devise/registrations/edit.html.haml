.container.py-5
  .row.justify-content-center
    .col-md-8
      .card.shadow
        .card-body.p-4
          .d-flex.justify-content-between.align-items-center.mb-4
            %h2 Edit Profile
            = link_to "Back", :back, class: "btn btn-outline-secondary"

          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource

            .mb-3
              = f.label :email, class: "form-label"
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                .form-text.text-info
                  Currently waiting confirmation for: #{resource.unconfirmed_email}

            .mb-3
              = f.label :name, class: "form-label"
              = f.text_field :name, class: "form-control"

            .mb-3
              = f.label :password, class: "form-label"
              = f.password_field :password, autocomplete: "new-password", class: "form-control"
              .form-text
                Leave blank if you don't want to change it
                - if @minimum_password_length
                  %br
                  #{@minimum_password_length} characters minimum

            .mb-3
              = f.label :password_confirmation, class: "form-label"
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

            .mb-4
              = f.label :current_password, class: "form-label"
              = f.password_field :current_password, autocomplete: "current-password", class: "form-control"
              .form-text
                We need your current password to confirm your changes

            .d-grid.gap-2
              = f.submit "Update", class: "btn btn-primary btn-lg"

          %hr.my-4

          .card.mt-4.border-danger
            .card-body
              %h3.card-title.h5 Cancel my account
              %p.card-text Are you sure you want to delete your account? This action cannot be undone.
              = button_to "Cancel my account", registration_path(resource_name), 
                data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
                method: :delete, 
                class: "btn btn-danger"