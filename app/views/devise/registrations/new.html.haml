.container.py-5
  .row.justify-content-center
    .col-md-6
      .card.shadow
        .card-body.p-4
          %h2.text-center.mb-4 Sign Up

          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource

            .mb-3
              = f.label :name, class: "form-label"
              = f.text_field :name, autofocus: true, class: "form-control"

            .mb-3
              = f.label :email, class: "form-label"
              = f.email_field :email, autocomplete: "email", class: "form-control"

            .mb-3
              = f.label :password, class: "form-label"
              - if @minimum_password_length
                %small.text-muted.d-block
                  (#{@minimum_password_length} characters minimum)
              = f.password_field :password, autocomplete: "new-password", class: "form-control"

            .mb-3
              = f.label :password_confirmation, class: "form-label"
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

            .d-grid.gap-2
              = f.submit "Sign up", class: "btn btn-primary btn-lg"

          %hr.my-4

          .text-center
            Already have an account?
            = link_to "Sign in", new_session_path(resource_name), class: "text-decoration-none"

          - if devise_mapping.omniauthable?
            .d-grid.gap-2.mt-3
              - resource_class.omniauth_providers.each do |provider|
                = button_to omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-secondary", data: { turbo: false } do
                  %i.bi.bi-google.me-2
                  Sign up with #{OmniAuth::Utils.camelize(provider)}