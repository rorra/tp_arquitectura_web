%table.table.table-hover
  %thead
    %tr
      %th Order #
      %th Date
      %th Total
      %th Status
      %th Actions
  %tbody
    - @orders.each do |order|
      %tr
        %td= "##{order.id}"
        %td= order.created_at.strftime("%B %d, %Y")
        %td= number_to_currency(order.total_price)
        %td
          %span{class: "badge bg-#{order_status_color(order.status)}"}
            = order.status.titleize
        %td
          = link_to order_path(order), class: "btn btn-sm btn-outline-primary" do
            %i.bi.bi-eye
            View Details
          - if order.pending?
            = link_to new_payment_path(order_id: order.id), class: "btn btn-sm btn-success" do
              %i.bi.bi-credit-card
              Pay Now
