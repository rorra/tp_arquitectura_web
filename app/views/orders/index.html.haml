.container
  .row.mt-4
    .col-12
      %h1.mb-4 My Orders

      - if @orders.any?
        .table-responsive
          %table.table.table-hover
            %thead
              %tr
                %th Order #
                %th Date
                %th Total
                %th Status
                %th Actions
            %tbody
              - @orders.each do |order|
                %tr
                  %td= "##{order.id}"
                  %td= order.created_at.strftime("%B %d, %Y")
                  %td= number_to_currency(order.total_price)
                  %td
                    %span{class: "badge bg-#{order_status_color(order.status)}"}
                      = order.status.titleize
                  %td
                    = link_to order_path(order), class: "btn btn-sm btn-outline-primary" do
                      %i.bi.bi-eye
                      View Details
      - else
        .text-center.py-5
          %i.bi.bi-bag.display-1.text-muted
          %h3.mt-3 No Orders Yet
          %p.text-muted Start shopping to create your first order
          = link_to "Browse Products", root_path, class: "btn btn-primary mt-3"
