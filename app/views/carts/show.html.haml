%h1 Your Shopping Cart
%ul
  - @cart_items.each do |item|
    %li
      = "#{item.product.name} - Quantity: #{item.quantity}"
      = button_to 'Add one more', add_item_cart_path(product_id: item.product.id), method: :post
      = button_to 'Remove one', remove_item_cart_path(product_id: item.product.id), method: :delete
      = button_to 'Remove all', remove_item_cart_path(product_id: item.product.id, remove_all: true), method: :delete, data: { turbo_confirm: 'Are you sure you want to remove all units of this product?' }
= link_to 'Proceed to Checkout', checkout_cart_path